<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.room.main.mapper.mainMapper">

   <!-- 방 종류 가져오기 -->
   <select id="kind" resultType="com.room.admin.dto.RoomKindDTO"> 
		SELECT 	room_bno, room_class
		FROM 	room_kind
   </select>
   
	<!-- 방 리스트를 종류대로 뿌려주기 -->
	<select id="allRooms" resultType="com.room.main.dto.RoomInfraDTO">
		SELECT 	*
		FROM 	room_infra
		ORDER 	BY r_bno
	</select>

	<!-- 방 상세보기 -->
	<select id="getRoomView" parameterType="int" resultType="com.room.main.dto.RoomInfraDTO">
		SELECT 	*
		FROM 	room_infra
		WHERE 	r_bno = #{r_bno}
	</select>
</mapper>